<script>
        $(document).ready(function () {
        let input = document.querySelector("#telefono");
        let iti = window.intlTelInput(input, {
            initialCountry: "sv",
            separateDialCode: true,
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/18.1.1/js/utils.js"
        });

        $("#createForm").submit(function (e) {
            let numeroCompleto = iti.getNumber();
            let esValido = iti.isValidNumber();

            if (!esValido) {
                e.preventDefault();
                alert("Por favor, ingrese un número de teléfono válido.");
            } else {
                $("#telefono").val(numeroCompleto);

                // Realizamos el envío del formulario con AJAX
                $.ajax({
                    type: "POST",
                    url: $(this).attr("action"),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            // Guardamos el userId en localStorage
                            localStorage.setItem("userId", response.userId);

                            // También puedes hacer una redirección o mostrar un mensaje de éxito
                            alert("Usuario creado correctamente.");
                            window.location.href = "/usuarios/PreguntasSeguridad"; // Redirigir a la página de lista de usuarios
                        } else {
                            alert("Hubo un problema al guardar los datos.");
                        }
                    },
                    error: function () {
                        alert("Hubo un error al enviar los datos.");
                    }
                });

                // Evitar que el formulario se envíe de la manera tradicional
                e.preventDefault();
            }
        });
    });
</script>


