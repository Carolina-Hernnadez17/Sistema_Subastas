@model Sistema_Subastas.Models.usuarios

@{
    Layout = null; // Quitar el layout para esta vista
}
<p>@ViewBag.Mensaje</p>


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Sistema Subastas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/11.0.16/sweetalert2.min.css">
    <link rel="stylesheet" href="./css/Loginn.css" />
    <link rel="stylesheet" href="./css/Estilo.css" />

</head>
<body>
    <div class="container">
        <div class="row register-container">
@*             <img class="left-image" src="~/img/descarga.jpg" /> *@
            <div class="col">
                <h3 class="text-center">Inicio de sesión</h3>
                <hr>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" name="correo" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" name="contrasena" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-register">Continuar</button>
                </form>
                <hr>
                <div class="d-flex justify-content-center gap-3 mb-3">
                    <i class="bi bi-person-plus me-2"></i><a href="@Url.Action("Create", "Usuarios")">¿No tienes cuenta? <strong>¡Regístrate!</strong></a>
                    <i class="bi bi-lock me-2"></i><a href="@Url.Action("IngresarCorreo", "Usuarios")">¿Olvidaste tu contraseña?</a>
                </div>
            </div>
        </div>
    </div>
    <!-- TOAST DE ERROR -->
    <div id="toast-container-error" class="position-fixed top-0 end-0 p-3" style="z-index: 1050; display: none;">
        <div id="toastMensajeError" class="toast align-items-center text-white bg-dark border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-2" style="font-size: 1.5rem; color: #6f4832;"></i>
                    <span id="toast-text-error"></span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- TOAST DE ÉXITO -->
    <div id="toast-container-success" class="position-fixed top-0 end-0 p-3" style="z-index: 1050; display: none;">
        <div id="toastMensajeSuccess" class="toast align-items-center text-white bg-dark border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-2" style="font-size: 1.5rem; color: #6f4832;"></i>
                    <span id="toast-text-success"></span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var mensajeError = '@Html.Raw(TempData["Mensaje"])';
            var mensajeExito = '@Html.Raw(TempData["Exito"])';

            if (mensajeError.trim() !== "" && mensajeError !== "null" && mensajeError !== "undefined") {
                document.getElementById('toast-text-error').textContent = mensajeError;
                document.getElementById('toast-container-error').style.display = "block";

                var toastElementError = document.getElementById('toastMensajeError');
                var toastError = new bootstrap.Toast(toastElementError);
                toastError.show();
            }

            if (mensajeExito.trim() !== "" && mensajeExito !== "null" && mensajeExito !== "undefined") {
                document.getElementById('toast-text-success').textContent = mensajeExito;
                document.getElementById('toast-container-success').style.display = "block";

                var toastElementSuccess = document.getElementById('toastMensajeSuccess');
                var toastSuccess = new bootstrap.Toast(toastElementSuccess);
                toastSuccess.show();
            }
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
