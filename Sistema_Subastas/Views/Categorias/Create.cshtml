@model Sistema_Subastas.Models.categorias

@{
    ViewData["Title"] = "Nueva Categoría";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/categorias.css" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header colorCafe">
            <h4 class="mb-0">Crear Nueva Categoría</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="nombre" class="form-label colorc"></label>
                    <input asp-for="nombre" class="form-control" placeholder="Nombre de la categoría" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-pastel-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-pastel-warning">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
