@model IEnumerable<Sistema_Subastas.Models.categorias>

@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/categorias.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="colorc mb-0">Categorías</h2>
        <a asp-action="Create" class="btn btn-pastel-warning">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    <th style="width: 240px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-pastel-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-pastel-info me-1">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-pastel-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
