@model Sistema_Subastas.Models.categorias

@{
    ViewData["Title"] = "Eliminar Categoría";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/categorias.css" />

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header colorCafe">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-3">¿Estás seguro que deseas eliminar esta categoría?</h5>

            <dl class="row">
                <dt class="col-sm-3 colorc">
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nombre)
                </dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between align-items-center mt-4">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-pastel-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-pastel-danger">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
            </form>
        </div>
    </div>
</div>
