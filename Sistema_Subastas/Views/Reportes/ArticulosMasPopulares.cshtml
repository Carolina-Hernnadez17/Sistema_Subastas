@model Sistema_Subastas.Models.ReporteArticulosViewModel

@{
    ViewData["Title"] = "Artículos más populares";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<link href="~/css/StyleApopulares.css" rel="stylesheet" />

<div class="apopulares-container">
    <h2 class="apopulares-title">@ViewData["Title"]</h2>

    <form asp-action="DescargarReportePdf" method="post" class="apopulares-form">
        <button type="submit" class="apopulares-btn">Mostrar Reporte</button>
    </form>

    @if (Model?.ReportePorPujas != null && Model.ReportePorPujas.Any())
    {
        <div class="apopulares-section">
            <h4 class="apopulares-subtitle">Artículos más populares por pujas</h4>
            <div class="apopulares-table-wrapper">
                <table class="apopulares-table">
                    <thead>
                        <tr>
                            <th>Título de la obra</th>
                            <th>Artista</th>
                            <th>Cantidad de pujas</th>
                            <th>Monto máximo de la puja</th>
                            <th>Fecha de la última puja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReportePorPujas)
                        {
                            <tr>
                                <td>@item.TituloObra</td>
                                <td>@item.NombreArtista</td>
                                <td>@item.CantidadPujas</td>
                                <td>@item.MontoMaximoPuja.ToString("C")</td>
                                <td>@item.FechaUltimaPuja.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p class="apopulares-empty">No hay datos de pujas disponibles.</p>
    }

    @if (Model?.ReportePorVistas != null && Model.ReportePorVistas.Any())
    {
        <div class="apopulares-section">
            <h4 class="apopulares-subtitle">Artículos más populares por vistas</h4>
            <div class="apopulares-table-wrapper">
                <table class="apopulares-table">
                    <thead>
                        <tr>
                            <th>Título de la obra</th>
                            <th>Artista</th>
                            <th>Cantidad de pujas</th>
                            <th>Monto máximo de la puja</th>
                            <th>Fecha de la última puja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReportePorVistas)
                        {
                            <tr>
                                <td>@item.TituloObra</td>
                                <td>@item.NombreArtista</td>
                                <td>@item.CantidadPujas</td>
                                <td>@item.MontoMaximoPuja.ToString("C")</td>
                                <td>@item.FechaUltimaPuja.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p class="apopulares-empty">No hay datos de vistas disponibles.</p>
    }
</div>


