@model Sistema_Subastas.Models.ReporteArticulosViewModel

@{
    ViewData["Title"] = "Artículos más populares";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<link href="../css_C/StyleC.css" rel="stylesheet" />

<form asp-action="DescargarReportePdf" method="post" class="mt-3">
    <div class="row">
        <button type="submit" class="btn colorCafe">Mostrar Reporte</button>
    </div>
</form>

@if (Model?.ReportePorPujas != null && Model.ReportePorPujas.Any())
{
    <div class="mt-4">
        <h4>Artículos más populares por pujas</h4>
        <table class="table table-bordered table-striped">
            <thead class="table colorc">
                <tr>
                    <th>Título de la obra</th>
                    <th>Artista</th>
                    <th>Cantidad de pujas</th>
                    <th>Monto máximo de la puja</th>
                    <th>Fecha de la última puja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ReportePorPujas)
                {
                    <tr>
                        <td>@item.TituloObra</td>
                        <td>@item.NombreArtista</td>
                        <td>@item.CantidadPujas</td>
                        <td>@item.MontoMaximoPuja.ToString("C")</td>
                        <td>@item.FechaUltimaPuja.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No hay datos de pujas disponibles.</p>
}

