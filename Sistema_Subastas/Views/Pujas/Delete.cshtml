@model Sistema_Subastas.Models.pujas

@{
    ViewData["Title"] = "Delete";
}

<h1>Cancelar Puja</h1>

<h3>¿Estás seguro de que deseas cancelar esta puja?</h3>
<div>
    <h4>Puja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.monto)</dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.usuario_id)</dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.fecha_puja)</dd>
    </dl>

    <form asp-action="CancelarPuja" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" name="confirmar" value="true">Confirmar Cancelación</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>

