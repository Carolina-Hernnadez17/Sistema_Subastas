<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_Admin</title>
    <link rel="stylesheet" href="~/css/layoutAdmin.css" asp-append-version="true" />
</head>
<body>
    <div class="navadmin-wrapper">
        <header>
            <nav class="navadmin-navbar">
                <div class="navadmin-container">
                    <a class="navadmin-brand" asp-controller="HomeAdmin" asp-action="Index">Sistema Subastas</a>
                    <div class="navadmin-links">
                        <a class="navadmin-link" asp-controller="HomeAdmin" asp-action="Index">Inicio</a>
                        <a class="navadmin-link" asp-controller="Reportes" asp-action="ArticulosMasPopulares">Reporte Artículos</a>
                        <a class="navadmin-link" asp-controller="Categorias" asp-action="Index">Agregar Categorías</a>
                        <a class="navadmin-link logout" asp-controller="Usuarios" asp-action="CerrarSesion">Cerrar Sesión</a>
                    </div>
                </div>
            </nav>
        </header>

        <main class="navadmin-content">
            @RenderBody()
        </main>

        <footer class="navadmin-footer">
            <div class="navadmin-container">
                &copy; 2025 - Sistema_Subastas Admin
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
