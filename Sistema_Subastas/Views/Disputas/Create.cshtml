@model Sistema_Subastas.Models.disputas

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>disputas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Artículo</label>
                <input class="form-control" value="@ViewBag.ArticuloId" readonly />
                <input type="hidden" asp-for="articulo_id" value="@ViewBag.ArticuloId" />
            </div>

            <div class="form-group">
                <label>Comprador</label>
                <input class="form-control" value="@ViewBag.CompradorId" readonly />
                <input type="hidden" asp-for="comprador_id" value="@ViewBag.CompradorId" />
            </div>

            <div class="form-group">
                <label>Vendedor</label>
                <input class="form-control" value="@ViewBag.VendedorId" readonly />
                <input type="hidden" asp-for="vendedor_id" value="@ViewBag.VendedorId" />
            </div>

            <div class="form-group">
                <label asp-for="motivo" class="control-label">Motivo</label>
                <select asp-for="motivo" class="form-control">
                    <option value="">Seleccione un motivo</option>
                    <option value="Producto no recibido">Producto no recibido</option>
                    <option value="Producto defectuoso">Producto defectuoso</option>
                    <option value="Artículo incorrecto">Artículo incorrecto</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="motivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="descripcion" class="control-label">Descripcion</label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="fecha" class="control-label">Fecha de la disputa</label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
