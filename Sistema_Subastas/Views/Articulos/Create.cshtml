                e.preventDefault();
                return;
            }

            if (isNaN(precioVenta) || precioVenta <= 0) {
                alert("El precio de venta debe ser un número mayor a 0.");
                e.preventDefault();
                return;
            }
        });

        function bloquearNoNumericos(evt) {
            const key = evt.key;
            if (!/[0-9.]|\b/.test(key)) {
                evt.preventDefault();
            }
        }

        precioSalidaInput.addEventListener("keypress", bloquearNoNumericos);
